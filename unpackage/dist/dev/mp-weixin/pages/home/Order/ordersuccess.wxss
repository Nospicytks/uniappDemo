  height: 150rpx;
}
.ordersuccess .success ._div {
  text-align: center;
  height: 75rpx;
  line-height: 75rpx;
  font-size: 34rpx;
  font-weight: 400;
  letter-spacing: 2rpx;
}
.ordersuccess .tishi {
  width: 90%;
  margin: 0 auto;
  margin-top: 35%;
  height: 150rpx;
  background-color: #f4f8ff;
