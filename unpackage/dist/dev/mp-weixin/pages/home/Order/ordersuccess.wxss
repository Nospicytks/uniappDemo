  line-height: 75rpx;
  height: 75rpx;
  letter-spacing: 2rpx;
}
.ordersuccess .tishi ._div:nth-child(1) {
  font-size: 32rpx;
}
.ordersuccess .tishi ._div:nth-child(2) {
  font-size: 26rpx;
