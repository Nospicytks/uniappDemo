.ordersuccess .top {
  width: 33%;
  margin: 0 auto;
  height: 230rpx;
  margin-top: 15%;
  background: url(http://daranzhibojiekou.daranjituan.com/static/mini/static/home/ordersuccess.png) no-repeat;
  background-size: 100% 100%;
}
.ordersuccess .success {
  margin-top: 5%;
