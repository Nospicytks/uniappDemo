.messages {
  width: 90%;
  margin: 0 auto;
}
.messages .scroll-view {
  width: 100%;
  height: 90vh;
}
.messages .scroll-view .scroll-view-item {
  background-color: #fff;
  -webkit-border-radius: 16rpx;
          border-radius: 16rpx;
  margin-top: 3%;
  padding-top: 5%;
}
.messages .scroll-view .scroll-view-item .scroll-view-item-top {
  height: 75rpx;
  line-height: 75rpx;
  width: 90%;
  margin: 0 auto;
  border-bottom: 1px solid #d6d6d6;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.messages .scroll-view .scroll-view-item .scroll-view-item-top ._div:nth-child(1) {
  width: 8%;
  height: 48rpx;
  margin-top: 2%;
  background-color: #007AFF;
  -webkit-border-radius: 50%;
          border-radius: 50%;
  text-align: center;
  line-height: 50rpx;
  position: relative;
}
.messages .scroll-view .scroll-view-item .scroll-view-item-top ._div:nth-child(1) image {
  width: 50%;
  height: 50%;
}
.messages .scroll-view .scroll-view-item .scroll-view-item-top ._div:nth-child(1) ._div {
  position: absolute;
  width: 10rpx;
  height: 10rpx;
  -webkit-border-radius: 50%;
          border-radius: 50%;
  background-color: red;
  top: 0;
  left: 65%;
}
.messages .scroll-view .scroll-view-item .scroll-view-item-top ._div:nth-child(2) {
  width: 45%;
  color: #333;
  text-align: center;
  font-weight: bold;
}
.messages .scroll-view .scroll-view-item .scroll-view-item-top ._div:nth-child(3) {
  width: 45%;
  font-size: 22rpx;
  color: rgba(0, 0, 0, 0.4);
}
.messages .scroll-view .scroll-view-item .scroll-view-item-top ._div:nth-child(3) ._span:nth-child(2) {
  margin-left: 2%;
}
.messages .scroll-view .scroll-view-item .scroll-view-item-bottom {
  height: 100rpx;
  line-height: 100rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  color: rgba(0, 0, 0, 0.4);
  font-size: 24rpx;
  width: 90%;
  margin: 0 auto;
}
.messages .scroll-view .scroll-view-item .scroll-view-item-bottom ._div:nth-child(1) {
  width: 95%;
