  font-size: 24rpx;
  margin-left: 2%;
}
.integralList .scroll-view .scroll-view-item .scroll-view-item-b {
  width: 55%;
  font-size: 24rpx;
}
.integralList .scroll-view .scroll-view-item .scroll-view-item-b ._div {
  height: 66.6rpx;
  line-height: 66.6rpx;
}
.integralList .scroll-view .scroll-view-item .scroll-view-item-b ._div:nth-child(2) ._span:nth-child(2) {
  color: #f1524f;
  font-weight: bold;
  font-size: 38rpx;
  margin-left: 5%;
}
.integralList .scroll-view .scroll-view-item .scroll-view-item-b ._div:nth-child(2) ._span:nth-child(3) {
  color: #f1524f;
}
.integralList .scroll-view .scroll-view-item .scroll-view-item-b ._div:nth-child(3) {
  font-size: 24rpx;
}
