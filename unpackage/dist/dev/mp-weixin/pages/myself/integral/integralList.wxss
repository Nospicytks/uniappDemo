.integralList {
  width: 90%;
  margin: 0 auto;
}
.integralList .scroll-view {
  height: 95vh;
}
.integralList .scroll-view .scroll-view-item {
  margin-bottom: 3%;
  -webkit-border-radius: 16rpx;
          border-radius: 16rpx;
  height: 200rpx;
  border: 1px solid #ff9a6e;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.integralList .scroll-view .scroll-view-item .scroll-view-item-a {
  width: 30%;
  text-align: center;
  line-height: 200rpx;
  color: #f1524f;
}
.integralList .scroll-view .scroll-view-item .scroll-view-item-a ._span:nth-child(1) {
  font-size: 42rpx;
  font-weight: bold;
}
