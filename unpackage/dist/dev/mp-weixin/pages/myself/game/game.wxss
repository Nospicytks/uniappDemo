page {
  width: 100%;
  height: 100%;
}
.game {
  height: 100%;
}
.game .title {
  width: 90%;
  margin: 0 auto;
}
.game .detail {
  width: 20%;
  height: 60rpx;
  line-height: 60rpx;
  margin-left: auto;
  margin-top: 25%;
  background-color: #fc4a48;
  -webkit-border-radius: 20rpx 0 0 20rpx;
          border-radius: 20rpx 0 0 20rpx;
  font-size: 24rpx;
  color: #fff;
  padding-left: 3%;
}
.game .play {
  width: 90%;
  height: 650rpx;
  margin: 0 auto;
  background-color: #fff;
  padding-left: 25rpx;
  padding-top: 15rpx;
  -webkit-border-radius: 20rpx;
          border-radius: 20rpx;
  margin-top: 5%;
}
.game .my {
  height: 120rpx;
  line-height: 120rpx;
  width: 85%;
  margin: 0 auto;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  color: #fff;
}
.game .my ._div:nth-child(2) {
  margin-left: auto;
  text-align: right;
  cursor: pointer;
}
.game .names {
  width: 90%;
  margin: 0 auto;
  background-color: #fff;
  -webkit-border-radius: 20rpx;
          border-radius: 20rpx;
}
.game .names .names-title {
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 26rpx;
  color: #333;
}
.game .names .scroll-view {
  height: 300rpx;
}
.game .names .scroll-view .nameList {
  margin-top: 3%;
  margin-bottom: 3%;
  padding-left: 5%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.game .names .scroll-view .nameList ._div:nth-child(2) {
  margin-left: auto;
  padding-right: 5%;
}
.game .showadv {
  width: 100%;
  height: 100%;
  z-index: 99999;
  position: absolute;
  background-color: rgba(51, 51, 51, 0.6);
  top: 0;
}
.game .showadv .advcontent {
  width: 60%;
  margin: 0 auto;
  -webkit-border-radius: 12rpx;
          border-radius: 12rpx;
  background-color: #fff;
  margin-top: 50%;
}
.game .showadv .advcontent .advtitle {
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 32rpx;
}
.game .showadv .advcontent .adv {
  font-size: 26rpx;
  color: rgba(0, 0, 0, 0.4);
  padding: 5%;
}
.game .showadv .advcontent .advbottom {
  font-size: 26rpx;
  color: red;
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
}

