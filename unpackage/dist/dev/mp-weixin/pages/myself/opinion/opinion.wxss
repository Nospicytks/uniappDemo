.opinion {
  width: 90%;
  margin: 0 auto;
}
.opinion .head {
  height: 100rpx;
  line-height: 100rpx;
}
.opinion .head ._div:nth-child(1) {
  color: #333;
  font-weight: bold;
  float: left;
}
.opinion .head ._div:nth-child(2) {
  color: #5e80f8;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  text-align: right;
