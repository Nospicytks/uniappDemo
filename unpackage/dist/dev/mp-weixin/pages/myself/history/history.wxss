.history {
  width: 90%;
  margin: 0 auto;
}
.history .scroll-view {
  width: 100%;
  height: 90vh;
}
.history .scroll-view .scroll-view-item {
  height: 300rpx;
  background-color: #fff;
  -webkit-border-radius: 16rpx;
          border-radius: 16rpx;
  margin-top: 3%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding-top: 5%;
}
.history .scroll-view .scroll-view-item .scroll-view-item-left {
  margin-right: auto;
  padding-left: 5%;
}
.history .scroll-view .scroll-view-item .scroll-view-item-left ._div {
  height: 50rpx;
  line-height: 50rpx;
  color: rgba(0, 0, 0, 0.4);
  font-size: 22rpx;
}
.history .scroll-view .scroll-view-item .scroll-view-item-left ._div:nth-child(1) {
  font-weight: bold;
  color: #333;
  font-size: 42rpx;
  height: 50rpx;
  line-height: 50rpx;
}
.history .scroll-view .scroll-view-item .scroll-view-item-right {
  padding-right: 5%;
  text-align: right;
  margin-left: auto;
}
.history .scroll-view .scroll-view-item .scroll-view-item-right ._div {
  height: 50rpx;
  line-height: 50rpx;
  color: rgba(0, 0, 0, 0.4);
  font-size: 22rpx;
}
.history .scroll-view .scroll-view-item .scroll-view-item-right .scroll-view-item-right-child {
  color: #fff;
  font-size: 24rpx;
  height: 50rpx;
  width: 100%;
  line-height: 50rpx;
  text-align: center;
  -webkit-border-radius: 12rpx;
          border-radius: 12rpx;
  background: -webkit-gradient(linear, right top, left top, from(#2fc25a), to(#6bde80));
  background: -webkit-linear-gradient(right, #2fc25a, #6bde80);
  background: linear-gradient(right, #2fc25a, #6bde80);
}
.history .scroll-view .scroll-view-item .scroll-view-item-right .scroll-view-item-right-a {
  background: -webkit-gradient(linear, right top, left top, from(#2082ff), to(#02b2fe));
