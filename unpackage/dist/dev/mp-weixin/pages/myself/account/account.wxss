  /* 标准的语法（必须放在最后） */
  text-align: center;
  color: #fff;
  padding-top: 5%;
}
.account .head ._div:nth-child(1) {
  height: 60rpx;
  line-height: 60rpx;
}
.account .head ._div:nth-child(2) {
  font-size: 42rpx;
  font-weight: bold;
}
.account .head ._div:nth-child(3) {
  width: 15%;
  height: 50rpx;
  line-height: 50rpx;
  border: 1px solid #d6d6d6;
  margin: 0 auto;
  text-align: center;
  -webkit-border-radius: 30rpx;
          border-radius: 30rpx;
  background-color: #4c70fa;
  color: snow;
  margin-top: 5%;
  cursor: pointer;
  font-size: 26rpx;
}
.account .title {
  width: 80%;
  margin: 0 auto;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  letter-spacing: 2rpx;
}
.account .list {
  width: 90%;
  margin: 0 auto;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.account .list .list-item {
  width: 28%;
  -webkit-box-shadow: 0 0 12rpx #baedd6;
          box-shadow: 0 0 12rpx #baedd6;
  margin-top: 5%;
  text-align: center;
  padding-top: 5%;
  -webkit-border-radius: 8rpx;
          border-radius: 8rpx;
  cursor: pointer;
  padding-bottom: 5%;
}
.account .list .list-item ._div:nth-child(1) {
  font-weight: bold;
}
.account .list .list-item ._div:nth-child(1) ._span:nth-child(2) {
  font-size: 42rpx;
}
.account .list .list-item ._div:nth-child(2) {
  color: rgba(0, 0, 0, 0.4);
  font-size: 24rpx;
  margin-top: 20%;
}
.account .getMoncy {
  text-align: center;
  margin-top: 8%;
}
.account .getMoncy ._div:nth-child(2) {
  margin-top: 3%;
}
