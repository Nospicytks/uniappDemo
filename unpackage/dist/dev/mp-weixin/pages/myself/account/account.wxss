.account .head {
  width: 100%;
  height: 300rpx;
  background: -webkit-linear-gradient(#5378fc, #4565f6);
  /* Safari 5.1 - 6.0 */
  /* Opera 11.1 - 12.0 */
  /* Firefox 3.6 - 15 */
