.GOAuthenticate {
  width: 90%;
  margin: 0 auto;
}
.GOAuthenticate .title {
  margin-top: 5%;
  color: rgba(0, 0, 0, 0.4);
}
.GOAuthenticate .takePhoto {
  height: 300rpx;
  background-color: #fff;
  -webkit-border-radius: 16rpx;
          border-radius: 16rpx;
  margin-top: 8%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-justify-content: space-around;
          justify-content: space-around;
  padding-top: 2%;
}
.GOAuthenticate .takePhoto ._div {
  width: 45%;
}
.GOAuthenticate .list {
  background-color: #fff;
  padding-bottom: 5%;
  padding-top: 5%;
}
.GOAuthenticate .list .list-item {
  width: 90%;
  margin: 0 auto;
  height: 100rpx;
  background-color: #fff9f9;
  -webkit-border-radius: 16rpx;
          border-radius: 16rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin-top: 3%;
}
.GOAuthenticate .list .list-item ._div:nth-child(1) {
  width: 15%;
  text-align: center;
  line-height: 120rpx;
}
.GOAuthenticate .list .list-item ._div:nth-child(1) image {
  width: 50%;
  height: 55%;
}
.GOAuthenticate .list .list-item ._div:nth-child(2) {
  padding-top: 1%;
  width: 85%;
}
.GOAuthenticate .next {
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
  background-color: #4d74f7;
  text-align: center;
  margin-top: 8%;
