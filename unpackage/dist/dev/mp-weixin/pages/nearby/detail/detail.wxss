  height: 150rpx;
  margin-top: 5%;
  background-color: #fff;
  -webkit-border-radius: 16rpx;
          border-radius: 16rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.nearbydetail .title-left {
  width: 75%;
  padding-left: 5%;
}
.nearbydetail .title-left ._div:nth-child(1) {
  height: 80rpx;
  line-height: 80rpx;
  font-weight: bold;
  font-size: 33rpx;
}
.nearbydetail .title-left ._div:nth-child(2) {
  color: rgba(0, 0, 0, 0.4);
  font-size: 24rpx;
}
.nearbydetail .title-left ._div:nth-child(2) ._span:nth-child(2) {
  margin-left: 3%;
}
.nearbydetail .title-left ._div:nth-child(2) ._span:nth-child(3) {
  margin-left: 3%;
}
.nearbydetail .title-left ._div:nth-child(2) ._span:nth-child(4) {
  margin-left: 2%;
}
.nearbydetail .title-right {
  width: 25%;
}
.nearbydetail .title-right ._div {
  width: 60%;
  margin: 0 auto;
  -webkit-border-radius: 50%;
          border-radius: 50%;
  margin-top: 15%;
  height: 95rpx;
  background-color: #ff9c73;
  text-align: center;
}
