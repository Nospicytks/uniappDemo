  width: 40%;
  height: 40%;
  margin-top: 25%;
}
.nearbydetail .photo {
  height: 500rpx;
  background-color: #fff;
  -webkit-border-radius: 16rpx;
          border-radius: 16rpx;
  margin-top: 3%;
