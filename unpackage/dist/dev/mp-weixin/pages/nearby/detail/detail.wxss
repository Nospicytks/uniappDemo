  margin-top: 1%;
}
.nearbydetail .info .info-item .info-item-img image {
  width: 100%;
  height: 100%;
}
.nearbydetail .info .info-item ._div:nth-child(2) {
  margin-left: 5%;
  width: 65%;
  color: rgba(0, 0, 0, 0.4);
}
.nearbydetail .info .info-item ._div:nth-child(3) {
