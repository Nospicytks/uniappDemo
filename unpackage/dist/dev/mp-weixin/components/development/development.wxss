.development {
  width: 90%;
  margin: 0 auto;
  height: 700rpx;
  margin-top: 30%;
}
.development .devtop {
  height: 650rpx;
  -webkit-border-radius: 16rpx;
          border-radius: 16rpx;
  background-color: #fff;
  padding-top: 15%;
}
.development .devtop .img {
  width: 70%;
  margin: 0 auto;
  height: 220rpx;
}
.development .devtop .img image {
  width: 100%;
  height: 100%;
}
.development .devtop .title {
  width: 70%;
  margin: 0 auto;
  margin-top: 15%;
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #f4f7fe;
  -webkit-border-radius: 30rpx;
          border-radius: 30rpx;
