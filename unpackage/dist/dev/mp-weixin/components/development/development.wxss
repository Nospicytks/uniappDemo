}
.development .devtop .mess {
  width: 70%;
  margin: 0 auto;
  font-weight: bold;
  color: #7085ec;
  text-align: center;
  font-size: 42rpx;
  margin-top: 8%;
}
.development .bottom {
  height: 100rpx;
  margin-top: 10%;
}
.development .bottom .close {
  width: 10%;
  margin: 0 auto;
  height: 70rpx;
  line-height: 65rpx;
  text-align: center;
